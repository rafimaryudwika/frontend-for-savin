---
interface Props {
  menu: {
    name: string;
    path: string;
  }[];
  currentPage: string;
}

const { menu, currentPage } = Astro.props;
---

<nav>
  <div class="flex flex-row p-6">
    <div class="basis-1/2">
      <img src="/src/assets/svg/logo.svg" alt="logo" />
    </div>
    <div class="basis-1/2 flex flex-row my-auto justify-end">
      {
        menu.map((item) => (
          <div class="flex flex-col my-auto">
            <a href={item.path} class="px-2 font-[600]">
              {item.name}
            </a>
            <div
              class="bg-neutral-0 h-1 w-3/4 mx-auto rounded-md"
              class:list={{ "bg-neutral-700": currentPage === item.name }}
            />
          </div>
        ))
      }
      <div
        class="flex flex-row items-center px-5 mx-2 gap-10 w-30 h-9 bg-yellow-500 rounded-full font-semibold"
      >
        contact us
      </div>
    </div>
  </div>
</nav>
