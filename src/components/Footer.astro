---
interface Props {
  menu: {
    name: string;
    path: string;
  }[];
}

const { menu } = Astro.props;
---

<div class="h-60 bg-gradient-to-br from-black to-gray-600">
  <div class="flex flex-row p-6 h-full">
    <div class="flex justify-center items-center my-auto p-2">
      <img src="/src/assets/svg/logo.svg" alt="logo" />
    </div>
    <div class="flex flex-col flex-wrap px-4 w-64 h-20 my-auto">
      {
        menu.map((item) => (
          <a href={item.path} class="text-white px-2">
            {item.name}
          </a>
        ))
      }
    </div>
  </div>
</div>
